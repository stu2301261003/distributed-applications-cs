@model MountainRoutes.Models.MountainRoute

@{
    ViewData["Title"] = "Създаване";
}

<h1>Създаване</h1>

<h4>Маршрут</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Име</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LengthKm" class="control-label">Дължина (км)</label>
                <input asp-for="LengthKm" class="form-control" type="number" step="any" />
                <span asp-validation-for="LengthKm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Difficulty" class="control-label">Трудност</label>
                <select asp-for="Difficulty" class="form-control" asp-items="@(new SelectList(new[] { "Лесно", "Средно", "Трудно" }))">
                    <option value="">-- Избери трудност --</option>
                </select>
                <span asp-validation-for="Difficulty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreatedAt" class="control-label">Създаден на</label>
                <input asp-for="CreatedAt" class="form-control" type="date" />
                <span asp-validation-for="CreatedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MountainId" class="control-label">Планина</label>
                <select asp-for="MountainId" class ="form-control" asp-items="ViewBag.MountainId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Създай" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад към списъка</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
