@model MountainRoutes.Models.MountainRoute

@{
        ViewData["Title"] = "Детайли";
}

<h1>Детайли</h1>

<div>
    <h4>Маршрут</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Име
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Дължина (км)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LengthKm)
        </dd>
        <dt class = "col-sm-2">
            Трудност
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Difficulty)
        </dd>
        <dt class = "col-sm-2">
            Създаден на
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt class = "col-sm-2">
            Планина
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Mountain.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Редактирай</a> |
    <a asp-action="Index">Назад към списъка</a>
</div>
