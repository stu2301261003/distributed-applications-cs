@model IEnumerable<MountainRoutes.Models.Hut>

@{
    ViewData["Title"] = "Хижи";
}

<h1>Хижи</h1>

@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create" class="btn btn-success">Създай нова</a>
    </p>
}

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>Име</th>
                <th>Капацитет</th>
                <th>Има ресторант</th>
                <th>Географска ширина</th>
                <th>Географска дължина</th>
                <th>Маршрут</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Capacity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HasRestaurant)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Latitude)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Longitude)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Route.Name)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Детайли</a>

                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Редактирай</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Изтрий</a>
                    }
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>
