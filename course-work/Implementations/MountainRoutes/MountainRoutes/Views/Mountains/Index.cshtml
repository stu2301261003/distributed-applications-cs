@model X.PagedList.IPagedList<MountainRoutes.Models.Mountain>
@using X.PagedList.Mvc.Core

@{
    ViewData["Title"] = "Планини";
}

<h2>Планини</h2>

<!-- Search – достъпно за User и Admin -->
@if (User.Identity?.IsAuthenticated == true)
{
    <form asp-action="Index" method="get" class="mb-3">
        <input type="text"
               name="searchString"
               value="@ViewData["CurrentFilter"]"
               placeholder="Търси по име или местоположение"
               class="form-control d-inline w-25" />
        <button type="submit" class="btn btn-primary ms-2">
            Търси
        </button>
    </form>
}

<!-- Create – само за Admin -->
@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create" class="btn btn-success">
            Добави планина
        </a>
    </p>
}

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    <a asp-action="Index"
                       asp-route-sortOrder="@ViewData["NameSortParm"]">
                        Име
                    </a>
                </th>
                <th>Местоположение</th>
                <th>
                    <a asp-action="Index"
                       asp-route-sortOrder="@ViewData["HeightSortParm"]">
                        Височина (м)
                    </a>
                </th>
                <th>Първо изкачване</th>
                <th>Описание</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Location</td>
                    <td>@item.Height</td>
                    <td>@item.FirstAscent.ToShortDateString()</td>
                    <td>@item.Description</td>
                    <td>
                        <a asp-action="Details"
                           asp-route-id="@item.Id"
                           class="btn btn-sm btn-info">
                            Детайли
                        </a>

                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit"
                               asp-route-id="@item.Id"
                               class="btn btn-sm btn-warning">
                                Редактирай
                            </a>
                            <a asp-action="Delete"
                               asp-route-id="@item.Id"
                               class="btn btn-sm btn-danger">
                                Изтрий
                            </a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (Model.PageCount > 1)
{
    <nav>
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </nav>
}
